            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_ping_content_vertical_margin"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/activity_ping_photo_size"
                    android:layout_height="@dimen/activity_ping_photo_size"
                    android:layout_marginRight="@dimen/activity_ping_content_horizontal_margin"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_ping_content_horizontal_margin"
                    android:text="@string/title_name_placeholder" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
