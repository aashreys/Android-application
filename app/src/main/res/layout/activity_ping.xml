                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_ping_content_vertical_margin"
                android:layout_marginTop="@dimen/activity_ping_content_vertical_margin"
                android:gravity="center_vertical">

