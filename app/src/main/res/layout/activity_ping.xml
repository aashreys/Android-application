                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/activity_ping_photo_size"
                    android:layout_height="@dimen/activity_ping_photo_size"
                    android:layout_marginRight="@dimen/activity_ping_content_horizontal_margin"
                    android:background="@color/colorAccent" />

                <TextView
