<?xml version = "1.0" encoding = "utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/input_ibm_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_blend_logo"
            android:layout_marginTop="46dp"
            android:hint="@string/input_hint_enter_ibm_id" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/input_ibm_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/input_ibm_id"
            android:layout_below="@+id/input_ibm_id"
            android:hint="@string/input_hint_enter_password"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/input_password"
            android:layout_alignRight="@id/input_password"
            android:layout_below="@id/input_password"
            android:text="@string/title_login" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_login"
            android:layout_alignRight="@id/button_login"
            android:layout_below="@id/button_login"
            android:layout_marginTop="80dp"
            android:text="@string/title_register" />

        <Button
            android:id="@+id/button_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_register"
            android:layout_alignRight="@id/button_register"
            android:layout_below="@id/button_register"
            android:text="@string/title_forgot_password" />

        <ImageView
            android:id="@+id/image_blend_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_blend" />

        <ImageView
            android:id="@+id/image_ibm_logo"
            android:layout_width="100dp"
            android:src="@drawable/logo_blue"
            android:scaleType="fitEnd"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal= "true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

